{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "module": "commonjs",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "outDir": "dist",
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "noEmitOnError": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["dist", "node_modules", "seeders"]
}
