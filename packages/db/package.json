{
	"name": "@repo/database",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"main": "index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc --project tsconfig.json",
		"migrate:up": "node-pg-migrate up",
		"migrate:down": "node-pg-migrate down",
		"migrate:create": "node-pg-migrate -m ./migrations -j sql create"
	},
	"dependencies": {
		"drizzle-kit": "^0.31.5",
		"drizzle-orm": "^0.44.7",
		"node-pg-migrate": "^8.0.3",
		"pg": "^8.16.3"
	},
	"devDependencies": {
		"@types/node": "^20.19.23",
		"@types/pg": "^8.15.5",
		"typescript": "^5.9.3"
	}
}
